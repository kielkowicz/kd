%h1
  Series:

#link_to_new_serie{:style => 'padding-bottom: 10px' }
  = link_to 'Create new serie', new_series_path

%table
  - @series.each do |serie|
    %tr
      %td
        = link_to serie.name, series_path(serie)
      %td
        = link_to 'Edit name', edit_series_path(serie)
      %td
        = link_to 'Delete', series_path(serie), :method=>:delete, :confirm=>"Delete serie #{serie.name} and all cards?"
= PRODUCTION! if Rails.env == 'prodiction'
